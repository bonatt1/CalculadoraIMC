<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity"
    tools:ignore="ExtraText">


    <TextView
        android:textColor="@color/Green_700"
        android:text="Seu IMC é:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

   />

    <TextView
        android:id="@+id/textview_result"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:padding="16dp"
        android:layout_height="wrap_content"
        tools:text="@string/ol_bonatti1"
        android:textSize="38sp" />

    <TextView
        android:textColor="@color/Green_700"
        android:id="@+id/textview_classificacao"
        tools:text="Classificação: Normal"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="15sp"
        android:text="Confira na tabela abaixo outras classificações: "/>

    <TextView
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="MENOR QUE 18.5     ABAIXO DO PESO 0\nENTRE 18.5 E 24.9   NORMAL 0\nENTRE 25.0 E 29.9   SOBREPESO I\nENTRE 30.0 E 39.9   OBESIDADE II\nMAIOR QUE 40.0      OBESIDADE GRAVE III
" />
    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="10sp"
        android:text="PROCURE SEMPRE UM PROFFISIONAL"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/s__mbolo_de_nutri____o_logo_31dfe3fb28_seeklogo_com" />


</LinearLayout>